{
  "name": "@hl8/application-base",
  "version": "0.1.0",
  "description": "HL8 平台专用的应用核心库，提供应用层基线能力。",
  "keywords": [
    "nestjs",
    "application-base"
  ],
  "license": "MIT",
  "homepage": "https://github.com/hl8/hl8-aisaas-platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/hl8/hl8-aisaas-platform"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hl8/common": "workspace:*",
    "@hl8/exceptions": "workspace:*",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/cqrs": "^11.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nestjs/testing": "11.1.9",
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.11.0"
}