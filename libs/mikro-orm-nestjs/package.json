{
  "name": "@hl8/mikro-orm-nestjs",
  "version": "0.1.0",
  "description": "MikroORM NestJS 模块，提供 MikroORM 与 NestJS 的集成支持",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hl8/config": "workspace:*",
    "@hl8/exceptions": "workspace:*",
    "@hl8/logger": "workspace:*",
    "@mikro-orm/core": "^6.6.0",
    "@mikro-orm/nestjs": "^6.1.1",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.2",
    "nestjs-cls": "^6.0.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
