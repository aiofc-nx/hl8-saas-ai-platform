{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": {
          "module": "CommonJS",
          "moduleResolution": "node"
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../../src/$1",
    "^@repo/constants/(.*)$": "<rootDir>/../../../../packages/constants/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!@repo/)"
  ],
  "testTimeout": 60000
}