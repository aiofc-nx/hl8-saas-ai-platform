{
  "extends": "@repo/ts-config/nestjs.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "tests",
    "dist",
    "**/*spec.ts",
    "jest.config.ts",
    "scripts/**/*"
  ]
}
