{
  "name": "iam-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start -b swc -w",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "migration:create": "mikro-orm migration:create",
    "migration:down": "mikro-orm migration:down",
    "migration:fresh": "mikro-orm migration:fresh",
    "migration:list": "mikro-orm migration:list",
    "migration:pending": "mikro-orm migration:pending",
    "migration:up": "mikro-orm migration:up",
    "start": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./tests/e2e/jest.config.json",
    "test:email": "node scripts/test-email.js",
    "test:integration": "jest --config ./tests/integration/jest.config.json",
    "test:unit": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.936.0",
    "@blazity/nest-file-fastify": "^1.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@hl8/config": "workspace:*",
    "@hl8/exceptions": "workspace:*",
    "@hl8/logger": "workspace:*",
    "@mikro-orm/core": "^6.6.0",
    "@mikro-orm/migrations": "^6.6.0",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.6.0",
    "@mikro-orm/reflection": "^6.6.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "argon2": "^0.44.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.6.0",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@repo/constants": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.2",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "jest": "^30.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
